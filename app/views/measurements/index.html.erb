<p id="notice"><%= notice %></p>

<h2>Listing Measurements</h2>

<table class="u-full-width">
  <thead>
    <tr>
      <th>Name</th>
      <th>Bust</th>
      <th>Waist</th>
      <th>Hips</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measurements.each do |measurement| %>
      <tr>
        <td><%= link_to measurement.name, measurement %></td>
        <td><%= measurement.bust %></td>
        <td><%= measurement.waist %></td>
        <td><%= measurement.hips %></td>
        <td>
          <%= link_to measurement do %>
            <i class="fa fa-external-link"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_measurement_path(measurement) do %>
            <i class="fa fa-pencil"></i>
          <% end %>
        </td>
        <td>
          <%= link_to measurement, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
