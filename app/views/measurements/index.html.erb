<p id="notice"><%= notice %></p>

<h1>Listing Measurements</h1>

<table>
  <thead>
    <tr>
      <th>Neck to waist</th>
      <th>Nape to waist</th>
      <th>Armpit to waist</th>
      <th>Upper back</th>
      <th>Shoulder rise</th>
      <th>Waist</th>
      <th>Bust</th>
      <th>Hips</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measurements.each do |measurement| %>
      <tr>
        <td><%= measurement.neck_to_waist %></td>
        <td><%= measurement.nape_to_waist %></td>
        <td><%= measurement.armpit_to_waist %></td>
        <td><%= measurement.upper_back %></td>
        <td><%= measurement.shoulder_rise %></td>
        <td><%= measurement.waist %></td>
        <td><%= measurement.bust %></td>
        <td><%= measurement.hips %></td>
        <td><%= link_to 'Show', measurement %></td>
        <td><%= link_to 'Edit', edit_measurement_path(measurement) %></td>
        <td><%= link_to 'Destroy', measurement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

