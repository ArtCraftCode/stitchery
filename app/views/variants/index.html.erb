<p id="notice"><%= notice %></p>

<h1>Listing Variants</h1>

<table>
  <thead>
    <tr>
      <th>Size</th>
      <th>Pattern</th>
      <th>44</th>
      <th>54</th>
      <th>60</th>
      <th>Bust</th>
      <th>Waist</th>
      <th>Hips</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @variants.each do |variant| %>
      <tr>
        <td><%= variant.size %></td>
        <td><%= variant.pattern %></td>
        <td><%= variant.44 %></td>
        <td><%= variant.54 %></td>
        <td><%= variant.60 %></td>
        <td><%= variant.bust %></td>
        <td><%= variant.waist %></td>
        <td><%= variant.hips %></td>
        <td><%= link_to 'Show', variant %></td>
        <td><%= link_to 'Edit', edit_variant_path(variant) %></td>
        <td><%= link_to 'Destroy', variant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

